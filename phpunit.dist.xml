<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache"
>
    <php>
        <ini name="display_errors" value="1"/>
        <ini name="error_reporting" value="-1"/>
        <ini name="memory_limit" value="512M"/>
        
        <!-- Symfony Configuration -->
        <server name="APP_ENV" value="test" force="true"/>
        <server name="APP_SECRET" value="$ecretf0rt3st"/>
        <server name="KERNEL_CLASS" value="App\Kernel"/>
        <server name="SHELL_VERBOSITY" value="-1"/>
        <server name="SYMFONY_PHPUNIT_REMOVE" value=""/>
        <server name="SYMFONY_PHPUNIT_VERSION" value="10.5"/>
        
        <!-- Database Configuration -->
        <server name="DATABASE_URL" value="sqlite:///%kernel.project_dir%/var/test.db"/>
        <!-- Alternative for in-memory: -->
        <!-- <server name="DATABASE_URL" value="sqlite:///:memory:"/> -->
        
        <!-- Redis Configuration -->
        <server name="REDIS_URL" value="redis://localhost:6379"/>
        <server name="MESSENGER_TRANSPORT_DSN" value="sync://"/>
        
        <!-- API Configuration -->
        <server name="API_KEY" value="K4kP9wqX2YbV5nJm8tRv7sA6zQ3fH1gL"/>
    </php>

    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
            <directory>tests/Unit/Product</directory>
            <directory>tests/Unit/Shared</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Integration/Product</directory>
        </testsuite>
        <testsuite name="Functional">
            <directory>tests/Functional</directory>
        </testsuite>
        <testsuite name="All">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    
    <coverage>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>src/Kernel.php</directory>
            <directory>src/Migrations</directory>
        </exclude>
    </coverage>
</phpunit>